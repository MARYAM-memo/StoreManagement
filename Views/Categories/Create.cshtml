@using StoreManagement.ViewModels
@model CategoryVM

@{
    ViewData["Title"] = "Create New Category";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-plus-circle"></i> Create New Category
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Category Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <!-- Category Name -->
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Enter category description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Active Status -->
                        <div class="form-group mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger small"></span>
                        </div>

                        <!-- Form Buttons -->
                        <div class="form-group mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Category
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="fas fa-redo"></i> Reset
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tips Card -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3 bg-info text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-lightbulb"></i> Tips for Creating Categories
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i> 
                            <strong>Use clear names</strong> that customers will understand
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i> 
                            <strong>Keep it organized</strong> - avoid too many subcategories
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i> 
                            <strong>Add descriptions</strong> to help with SEO
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i> 
                            <strong>Deactivate instead of delete</strong> to keep historical data
                        </li>
                    </ul>
                    
                    <div class="alert alert-warning mt-3">
                        <h6><i class="fas fa-exclamation-triangle"></i> Best Practices</h6>
                        <p class="mb-0">Categories help organize your products and improve customer experience. Plan your category structure carefully.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Character counter for description
        $(document).ready(function() {
            const maxLength = 500;
            const descriptionField = $('#Description');
            const counter = $('<small class="form-text text-muted float-end"></small>');
            
            descriptionField.after(counter);
            
            function updateCounter() {
                const length = descriptionField.val().length;
                counter.text(`${length}/${maxLength} characters`);
                
                if (length > maxLength) {
                    counter.addClass('text-danger');
                } else {
                    counter.removeClass('text-danger');
                }
            }
            
            descriptionField.on('input', updateCounter);
            updateCounter(); // Initial update
        });
    </script>
}