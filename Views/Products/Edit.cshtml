@using StoreManagement.Common
@using StoreManagement.ViewModels
@model ProductVM

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit"></i> Edit Product
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Form Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Edit Product Information</h6>
            <span class="badge bg-info">ID: @Model.Id</span>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Product Name -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Price -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Price" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Stock Levels -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StockQuantity" class="form-label fw-bold"></label>
                                    <input asp-for="StockQuantity" class="form-control" />
                                    <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Image URL -->
                        <div class="form-group mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-bold">Image File</label>
                            <input asp-for="ImageUrl" type="file" name="imageFile" id="imageInput" accept="image/*"
                                class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            <img id="imagePreview"
                                src="@(string.IsNullOrEmpty(Model?.ImageUrl) 
                                    ? @DefaultValues.DefaultProductImage
                                    : Model.ImageUrl)"
                               class="img-fluid rounded" alt="Image Preview"
                                style="width:150px; height:150px; object-fit:cover; margin-top:10px;" />

                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <!-- Description -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Category -->
                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold"></label>
                            <select asp-for="CategoryId" class="form-select"
                                asp-items="@(new SelectList(Model?.Categories, "Id", "Name"))">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <!-- Brand -->
                        <div class="form-group mb-3">
                            <label asp-for="BrandId" class="form-label fw-bold"></label>
                            <select asp-for="BrandId" class="form-select"
                                asp-items="@(new SelectList(Model?.Brands, "Id", "Name"))">
                                <option value="">-- Select Brand --</option>
                            </select>
                            <span asp-validation-for="BrandId" class="text-danger small"></span>
                        </div>

                        <!-- Active Status -->
                        <div class="form-group mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger small"></span>
                        </div>

                        <!-- Info Box -->
                        <div class="alert alert-info mt-3">
                            <h6><i class="fas fa-info-circle"></i> Last Updated</h6>
                            <p class="mb-0">The product will be marked as updated on save.</p>
                        </div>
                    </div>
                </div>

                <!-- Form Buttons -->
                <div class="form-group mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Auto-dismiss alert
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
            $('#imageInput').on('change', function () {
                const file = this.files[0];

                if (file) {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        $('#imagePreview').attr('src', e.target.result);
                    };

                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').attr('src', '@DefaultValues.DefaultProductImage');
                }
            });
        });
    </script>
}