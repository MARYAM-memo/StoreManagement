@using StoreManagement.Common
@* Views/Products/Details.cshtml *@
@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-info-circle"></i> Product Details
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Product Details Card -->
    <div class="row">
        <!-- Left Column: Product Image & Basic Info -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Product Image</h6>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded"
                            style="max-height: 300px; object-fit: contain;">
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-box fa-5x text-muted mb-3"></i>
                            <p class="text-muted">No image available</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Stats</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">

                        <div class="col-6 mb-3">
                            <div class="text-primary fw-bold">Status</div>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-primary fw-bold">Category</div>
                            <div>@Model.Category?.Name</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="text-primary fw-bold">Brand</div>
                            <div>@Model.Brand?.Name</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Product Details -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
                </div>
                <div class="card-body">
                    <h3 class="text-primary mb-3">@Model.Name</h3>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold">Description</h6>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="fw-bold">Pricing</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td>Selling Price:</td>
                                        <td class="text-success fw-bold">@Model.Price.ToString("C")</td>
                                    </tr>

                                </table>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="fw-bold">Inventory</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td>Quantity in Stock:</td>
                                        <td>
                                            @if (Model.StockQuantity <= 20)
                                            {
                                                <span class="badge bg-warning">@Model.StockQuantity</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">@Model.StockQuantity</span>
                                            }
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>Stock Status:</td>
                                        <td>
                                            @if (Model.StockQuantity <= 0)
                                            {
                                                <span class="badge bg-danger">Out of Stock</span>
                                            }

                                            else
                                            {
                                                <span class="badge bg-success">In Stock</span>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Information -->
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="fw-bold">Audit Information</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="fas fa-calendar-plus"></i> Created:
                                    @Model.CreatedAt.ToDisplayDate()
                                </small>
                            </div>
                            <div class="col-md-6">
                                @if (Model.UpdatedAt.ToDisplayDate()!=null)
                                {
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-edit"></i> Last Updated:
                                        @Model.UpdatedAt.ToDisplayDate()
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow">
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a asp-action="Restock" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-plus-circle"></i> Restock
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                        <button type="button" class="btn btn-info" onclick="window.print()">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-sm td {
        padding: 0.5rem;
        border-top: none;
    }
</style>