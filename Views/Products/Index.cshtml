@using StoreManagement.Common
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}


<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-boxes"></i> Products
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search and Filter Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Search & Filter</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="searchTerm" class="form-control"
                        placeholder="Search by name, or description..." value="@ViewData["CurrentFilter"]" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-redo"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
            <div class="btn-group">
                <a href="@Url.Action("Index", new { sortOrder = ViewData["NameSortParm"] })"
                    class="btn btn-outline-primary btn-sm">
                    Sort by Name
                </a>
                <a href="@Url.Action("Index", new { sortOrder = ViewData["PriceSortParm"] })"
                    class="btn btn-outline-primary btn-sm">
                    Sort by Price
                </a>
                <a href="@Url.Action("Index", new { sortOrder = ViewData["StockSortParm"] })"
                    class="btn btn-outline-primary btn-sm">
                    Sort by Stock
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail"
                                            style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <i class="fas fa-box text-muted" style="font-size: 30px;"></i>
                                    }
                                </td>
                                <td>
                                    <strong>@item.Name</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@item.Description.Truncate(50)</small>
                                    }
                                </td>
                                <td>@item.Category?.Name</td>
                                <td>@item.Brand?.Name</td>
                                <td class="text-success">
                                    <strong>@item.Price.ToString("C")</strong>
                                </td>
                                <td>
                                    @if (item.StockQuantity <= 20)
                                    {
                                        <span class="badge bg-warning">@item.StockQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@item.StockQuantity</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"
                                            title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"
                                            title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Restock" asp-route-id="@item.Id" class="btn btn-success btn-sm"
                                            title="Restock">
                                            <i class="fas fa-plus-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                            title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No products found.
                    <a asp-action="Create">Create your first product</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}