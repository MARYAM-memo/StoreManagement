@using StoreManagement.Areas.Inventory.ViewModels

@model SupplierVM

@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit"></i> Edit Supplier
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Form Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Edit Supplier Information</h6>
            <span class="badge bg-info">ID: @Model.Id</span>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Basic Info -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ContactPerson" class="form-label fw-bold"></label>
                            <input asp-for="ContactPerson" class="form-control" />
                            <span asp-validation-for="ContactPerson" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Phone" class="form-label fw-bold"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Website" class="form-label fw-bold"></label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Location -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Country" class="form-label fw-bold"></label>
                            <select asp-for="Country" class="form-select" asp-items="ViewBag.Countries">
                                <option value="">-- Select Country --</option>
                            </select>
                            <span asp-validation-for="Country" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="City" class="form-label fw-bold"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="PostalCode" class="form-label fw-bold"></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="TaxNumber" class="form-label fw-bold"></label>
                            <input asp-for="TaxNumber" class="form-control" />
                            <span asp-validation-for="TaxNumber" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Address -->
                <div class="form-group mb-4">
                    <label asp-for="Address" class="form-label fw-bold"></label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <!-- Financial Info -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PaymentTerms" class="form-label fw-bold"></label>
                            <select asp-for="PaymentTerms" class="form-select" asp-items="ViewBag.PaymentTerms">
                                <option value="">-- Select Payment Terms --</option>
                            </select>
                            <span asp-validation-for="PaymentTerms" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CreditLimit" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="CreditLimit" class="form-control" />
                            </div>
                            <span asp-validation-for="CreditLimit" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Balance" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Balance" class="form-control" />
                            </div>
                            <span asp-validation-for="Balance" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Notes and Status -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Notes" class="form-label fw-bold"></label>
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="form-check form-switch mt-4">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Form Buttons -->
                <div class="form-group mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>