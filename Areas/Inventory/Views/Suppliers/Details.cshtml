@using StoreManagement.Models
@using StoreManagement.Models.Inventory

@model Supplier
@{
    ViewData["Title"] = "Supplier Details";
    var supplierProducts = ViewBag.SupplierProducts as List<Product>;
    var recentTransactions = ViewBag.RecentTransactions as List<StockTransaction>;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-info-circle"></i> Supplier Details
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Supplier Info -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-@(Model.IsActive ? "success" : "secondary") text-white">
                    <h6 class="m-0 font-weight-bold">Supplier Overview</h6>
                </div>
                <div class="card-body">
                    <h3 class="text-primary mb-3">@Model.Name</h3>
                    
                    <!-- Contact Info -->
                    <div class="mb-4">
                        <h6 class="fw-bold">Contact Information</h6>
                        @if (!string.IsNullOrEmpty(Model.ContactPerson))
                        {
                            <p><i class="fas fa-user"></i> @Model.ContactPerson</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <p><i class="fas fa-phone"></i> @Model.Phone</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <p><i class="fas fa-envelope"></i> @Model.Email</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <p><i class="fas fa-globe"></i> <a href="@Model.Website" target="_blank">@Model.Website</a></p>
                        }
                    </div>

                    <!-- Location Info -->
                    <div class="mb-4">
                        <h6 class="fw-bold">Location</h6>
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <p><i class="fas fa-map-marker-alt"></i> @Model.Address</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.City) || !string.IsNullOrEmpty(Model.Country))
                        {
                            <p>
                                @if (!string.IsNullOrEmpty(Model.City))
                                {
                                    <span>@Model.City</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.Country))
                                {
                                    <span>, @Model.Country</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.PostalCode))
                                {
                                    <br />
                                    <small>Postal Code: @Model.PostalCode</small>
                                }
                            </p>
                        }
                    </div>

                    <!-- Financial Info -->
                    <div class="mb-4">
                        <h6 class="fw-bold">Financial Information</h6>
                        @if (!string.IsNullOrEmpty(Model.TaxNumber))
                        {
                            <p><strong>Tax Number:</strong> @Model.TaxNumber</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.PaymentTerms))
                        {
                            <p><strong>Payment Terms:</strong> @Model.PaymentTerms</p>
                        }
                        <p><strong>Credit Limit:</strong> @Model.CreditLimit.ToString("C")</p>
                        <p><strong>Current Balance:</strong> 
                            <span class="@(Model.Balance > 0 ? "text-danger" : "text-success")">
                                @Model.Balance.ToString("C")
                            </span>
                        </p>
                    </div>

                    <!-- Status -->
                    <div class="mb-3">
                        <h6 class="fw-bold">Status</h6>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    </div>

                    <!-- Notes -->
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold">Notes</h6>
                            <p class="text-muted">@Model.Notes</p>
                        </div>
                    }

                    <!-- Statistics -->
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="fw-bold">Supplier Statistics</h6>
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="h4 text-primary mb-1">@(supplierProducts?.Count ?? 0)</div>
                                <small class="text-muted">Products</small>
                            </div>
                            <div class="col-6">
                                <div class="h4 text-info mb-1">@(recentTransactions?.Count ?? 0)</div>
                                <small class="text-muted">Transactions</small>
                            </div>
                        </div>
                        <div class="mt-2 text-center">
                            <small class="text-muted">
                                <i class="fas fa-calendar-plus"></i> Created: 
                                @Model.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <br />
                                <small class="text-muted">
                                    <i class="fas fa-calendar-edit"></i> Updated: 
                                    @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")
                                </small>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="QuickPurchase" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-cart-plus"></i> Quick Purchase
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Supplier
                        </a>
                        <a asp-controller="StockTransactions" asp-action="Create" 
                           asp-route-supplierId="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-exchange-alt"></i> New Transaction
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Products and Transactions -->
        <div class="col-lg-8">
            <!-- Products Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-box"></i> Supplied Products
                    </h6>
                    <span class="badge bg-primary">@(supplierProducts?.Count ?? 0) products</span>
                </div>
                <div class="card-body">
                    @if (supplierProducts?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in supplierProducts)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@product.Name</strong>
                                            </td>
                                            
                                            <td class="text-success">@product.Price.ToString("C")</td>
                                            <td>
                                                @if (product.StockQuantity <= 10)
                                                {
                                                    <span class="badge bg-danger">@product.StockQuantity</span>
                                                }
                                                else if (product.StockQuantity <= 20)
                                                {
                                                    <span class="badge bg-warning">@product.StockQuantity</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@product.StockQuantity</span>
                                                }
                                            </td>
                                            <td>
                                                @if (product.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Products" asp-action="Details" 
                                                   asp-route-id="@product.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-box-open fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No products supplied by this vendor</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Transactions Card -->
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-exchange-alt"></i> Recent Transactions
                    </h6>
                    <a asp-controller="StockTransactions" asp-action="Index" 
                       asp-route-supplierId="@Model.Id" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
                <div class="card-body">
                    @if (recentTransactions?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Product</th>
                                        <th>Type</th>
                                        <th>Qty</th>
                                        <th>Unit Cost</th>
                                        <th>Total</th>
                                        <th>Reference</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in recentTransactions)
                                    {
                                        <tr>
                                            <td>@transaction.TransactionDate.ToString("MMM dd, yyyy")</td>
                                            <td>@transaction.Product?.Name</td>
                                            <td>
                                                <span class="badge @GetTransactionBadgeClass(transaction.TransactionType)">
                                                    @transaction.TransactionType
                                                </span>
                                            </td>
                                            <td>@transaction.Quantity</td>
                                            <td>@transaction.UnitCost.ToString("C")</td>
                                            <td class="text-success fw-bold">@transaction.TotalCost.ToString("C")</td>
                                            <td>
                                                <small class="text-muted">@transaction.ReferenceNumber</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-exchange-alt fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No transactions recorded</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetTransactionBadgeClass(string transactionType)
    {
        return transactionType?.ToLower() switch
        {
            "purchase" => "bg-success",
            "sale" => "bg-primary",
            "return" => "bg-warning",
            "adjustment" => "bg-info",
            "transfer" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}