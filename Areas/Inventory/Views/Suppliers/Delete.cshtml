@using StoreManagement.Models.Inventory

@model Supplier

@{
    ViewData["Title"] = "Delete Supplier";
    var productCount = ViewBag.ProductCount as int? ?? 0;
    var transactionCount = ViewBag.TransactionCount as int? ?? 0;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800 text-danger">
            <i class="fas fa-exclamation-triangle"></i> Delete Supplier
        </h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="fas fa-arrow-left"></i> Back to Details
        </a>
    </div>

    <!-- Warning Card -->
    <div class="card shadow border-danger mb-4">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">
                <i class="fas fa-exclamation-circle"></i> Delete Supplier Confirmation
            </h6>
        </div>
        <div class="card-body">
            @if (productCount > 0 || transactionCount > 0)
            {
                <div class="alert alert-danger">
                    <h5 class="alert-heading">
                        <i class="fas fa-ban"></i> Cannot Delete Supplier
                    </h5>
                    <p>
                        This supplier has the following associations:
                    <ul>
                        @if (productCount > 0)
                        {
                            <li><strong>@productCount product(s)</strong> assigned to this supplier</li>
                        }
                        @if (transactionCount > 0)
                        {
                            <li><strong>@transactionCount transaction(s)</strong> recorded</li>
                        }
                    </ul>
                    </p>
                    <hr>
                    <p class="mb-0">
                        <strong>What to do:</strong>
                    <ol>
                        <li>Reassign products to another supplier or remove supplier association</li>
                        <li>Consider deactivating instead of deleting</li>
                        <li>Contact system administrator if you need to delete historical data</li>
                    </ol>
                    </p>
                </div>

                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit Instead
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <h5 class="alert-heading">
                        <i class="fas fa-skull-crossbones"></i> Are you sure you want to delete this supplier?
                    </h5>
                    <p class="mb-0">
                        This action cannot be undone. The supplier will be permanently removed from the database.
                    </p>
                </div>

                <!-- Supplier Details -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h4 class="text-danger">@Model.Name</h4>
                        @if (!string.IsNullOrEmpty(Model.ContactPerson))
                        {
                            <p><i class="fas fa-user"></i> @Model.ContactPerson</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <p><i class="fas fa-envelope"></i> @Model.Email</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <p><i class="fas fa-phone"></i> @Model.Phone</p>
                        }
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="mb-2">
                            <strong>Status:</strong>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                        <div class="text-muted">
                            <small>Created: @Model.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>

                <!-- Financial Summary -->
                <div class="mb-4">
                    <h6>Financial Summary:</h6>
                    <table class="table table-sm">
                        <tr>
                            <td>Credit Limit:</td>
                            <td>@Model.CreditLimit.ToString("C")</td>
                        </tr>
                        <tr>
                            <td>Current Balance:</td>
                            <td class="@(Model.Balance > 0 ? "text-danger" : "text-success")">
                                @Model.Balance.ToString("C")
                            </td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.PaymentTerms))
                        {
                            <tr>
                                <td>Payment Terms:</td>
                                <td>@Model.PaymentTerms</td>
                            </tr>
                        }
                    </table>
                </div>

                <!-- Delete Form -->
                <div class="mt-4 pt-3 border-top">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Confirmation -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label text-danger fw-bold" for="confirmDelete">
                                I understand this action is permanent and cannot be undone
                            </label>
                        </div>

                        <!-- Action Buttons -->
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit Instead
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            @if (productCount == 0 && transactionCount == 0)
                {
                    <text>
                        // Enable delete button only when checkbox is checked
                        $('#confirmDelete').change(function() {
                            $('#deleteBtn').prop('disabled', !$(this).is(':checked'));
                        });

                        // Confirmation dialog on form submit
                        $('form').submit(function(e) {
                            if (!$('#confirmDelete').is(':checked')) {
                            e.preventDefault();
                        alert('Please confirm that you understand this action is permanent.');
                        return false;
                            }

                        return confirm('Are you absolutely sure you want to permanently delete this supplier?');
                        });
                    </text>
            }
            });
    </script>
}