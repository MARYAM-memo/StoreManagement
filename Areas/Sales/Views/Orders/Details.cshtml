@using StoreManagement.Areas.Sales.ViewModels
@using StoreManagement.Models
@model Order
@{
    ViewData["Title"] = "Order Details";
    var orderItems = ViewBag.OrderItems as List<OrderItemVM>;
    var printMode = ViewBag.PrintMode as bool? ?? false;
}

@if (!printMode)
{
    <div class="container-fluid">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-info-circle"></i> Order Details
            </h1>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Print" asp-route-id="@Model.Id" class="btn btn-secondary" target="_blank">
                    <i class="fas fa-print"></i> Print
                </a>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
}

<!-- Order Details Card -->
<div class="@(printMode ? "" : "container-fluid")">
    <div class="@(printMode ? "invoice-container" : "card shadow mb-4")">
        @if (!printMode)
        {
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Order #@Model.OrderNumber</h6>
                <div>
                    <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                    <span class="badge @GetPaymentBadgeClass(Model.PaymentStatus??"") ms-2">
                        @(Model.PaymentStatus ?? "Pending")
                    </span>
                </div>
            </div>
        }

        <div class="@(printMode ? "invoice-body" : "card-body")">
            <!-- Invoice Header -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <h4 class="@(printMode ? "text-primary" : "text-gray-800") mb-3">
                        <i class="fas fa-store"></i> Store Dashboard
                    </h4>
                    <p class="mb-1">123 Business Street</p>
                    <p class="mb-1">Cairo, Egypt</p>
                    <p class="mb-1">Phone: +20 123 456 7890</p>
                    <p class="mb-0">Email: info@storedashboard.com</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h3 class="@(printMode ? "text-dark" : "text-primary")">INVOICE</h3>
                    <table class="table table-sm table-borderless">
                        <tr>
                            <th class="text-start">Invoice #:</th>
                            <td>@Model.OrderNumber</td>
                        </tr>
                        <tr>
                            <th class="text-start">Date:</th>
                            <td>@Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th class="text-start">Status:</th>
                            <td>
                                <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                            </td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                        {
                            <tr>
                                <th class="text-start">Payment Method:</th>
                                <td>@Model.PaymentMethod</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <!-- Customer and Shipping Info -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="@(printMode ? "border rounded p-3" : "card border")">
                        <div class="@(printMode ? "" : "card-header bg-light")">
                            <h6 class="mb-0 fw-bold">Bill To</h6>
                        </div>
                        <div class="@(printMode ? "mt-2" : "card-body")">
                            <h5>@Model.Customer?.Name</h5>
                            @if (!string.IsNullOrEmpty(Model.Customer?.Email))
                            {
                                <p class="mb-1"><i class="fas fa-envelope"></i> @Model.Customer.Email</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Customer?.Phone))
                            {
                                <p class="mb-1"><i class="fas fa-phone"></i> @Model.Customer.Phone</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.BillingAddress))
                            {
                                <p class="mb-0 mt-2"><strong>Billing Address:</strong></p>
                                <p class="mb-0">@Model.BillingAddress</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="@(printMode ? "border rounded p-3 mt-3 mt-md-0" : "card border mt-3 mt-md-0")">
                        <div class="@(printMode ? "" : "card-header bg-light")">
                            <h6 class="mb-0 fw-bold">Ship To</h6>
                        </div>
                        <div class="@(printMode ? "mt-2" : "card-body")">
                            @if (!string.IsNullOrEmpty(Model.ShippingAddress))
                            {
                                <p class="mb-0">@Model.ShippingAddress</p>
                            }
                            else if (!string.IsNullOrEmpty(Model.Customer?.Address))
                            {
                                <p class="mb-0">@Model.Customer.Address</p>
                            }
                            else
                            {
                                <p class="mb-0 text-muted">Same as billing address</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items Table -->
            <div class="table-responsive mb-4">
                <table class="table table-bordered">
                    <thead class="@(printMode ? "table-dark" : "bg-light")">
                        <tr>
                            <th>#</th>
                            <th>Product</th>
                            <th class="text-end">Quantity</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Discount</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (orderItems != null && orderItems.Any())
                        {
                            int counter = 1;
                            foreach (var item in orderItems)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@item.ProductName</td>
                                    <td class="text-end">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                    <td class="text-end">@item.Discount.ToString("F1")%</td>
                                    <td class="text-end">@item.TotalPrice.ToString("C")</td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No items found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Order Summary -->
            <div class="row justify-content-end">
                <div class="col-md-6 col-lg-4">
                    <table class="table table-sm table-bordered">
                        <tr>
                            <th class="text-start">Subtotal:</th>
                            <td class="text-end">@orderItems?.Sum(i => i.TotalPrice).ToString("C")</td>
                        </tr>
                        <tr>
                            <th class="text-start">Shipping Cost:</th>
                            <td class="text-end">@Model.ShippingCost.ToString("C")</td>
                        </tr>
                        <tr>
                            <th class="text-start">Tax Amount:</th>
                            <td class="text-end">@Model.TaxAmount.ToString("C")</td>
                        </tr>
                        <tr>
                            <th class="text-start">Discount:</th>
                            <td class="text-end text-danger">-@Model.DiscountAmount.ToString("C")</td>
                        </tr>
                        <tr class="table-active">
                            <th class="text-start">Total Amount:</th>
                            <th class="text-end text-success">@Model.TotalAmount.ToString("C")</th>
                        </tr>
                    </table>
                </div>
            </div>

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mt-4">
                    <h6 class="fw-bold">Notes:</h6>
                    <p class="text-muted">@Model.Notes</p>
                </div>
            }

            <!-- Footer -->
            <div class="mt-5 pt-4 border-top">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Terms & Conditions</h6>
                        <small class="text-muted">
                            Payment is due within 30 days. Please make checks payable to Store Dashboard.
                        </small>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="mt-3">
                            <p class="mb-1">Thank you for your business!</p>
                            <p class="mb-0">
                                <strong>Store Dashboard Team</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons (Only in non-print mode) -->
            @if (!printMode)
            {
                <div class="mt-4 pt-3 border-top">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Order
                        </a>
                        <button type="button" class="btn btn-success" onclick="updateOrderStatus(@Model.Id, 'Completed')">
                            <i class="fas fa-check-circle"></i> Mark as Completed
                        </button>
                        <button type="button" class="btn btn-info" onclick="updateOrderStatus(@Model.Id, 'Processing')">
                            <i class="fas fa-cog"></i> Mark as Processing
                        </button>
                        <button type="button" class="btn btn-danger" onclick="updateOrderStatus(@Model.Id, 'Cancelled')">
                            <i class="fas fa-times-circle"></i> Mark as Cancelled
                        </button>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@if (!printMode)
{
    @section Scripts {
        <script>
            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);

            // Update order status
            function updateOrderStatus(orderId, newStatus) {
                if (confirm(`Are you sure you want to mark this order as ${newStatus}?`)) {
                    $.ajax({
                        url: '@Url.Action("UpdateStatus", "Orders")',
                        type: 'POST',
                        data: {
                            orderId: orderId,
                            status: newStatus
                        },
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert('An error occurred. Please try again.');
                        }
                    });
                }
            }

            // Print invoice
            function printInvoice() {
                window.open('@Url.Action("Print", new { id = Model.Id })', '_blank');
            }
        </script>
    }
}

@functions {
    private string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "bg-warning",
            "processing" => "bg-info",
            "completed" => "bg-success",
            "cancelled" => "bg-danger",
            "refunded" => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetPaymentBadgeClass(string paymentStatus)
    {
        return paymentStatus?.ToLower() switch
        {
            "paid" => "bg-success",
            "pending" => "bg-warning",
            "failed" => "bg-danger",
            "refunded" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}