@using StoreManagement.Areas.Sales.ViewModels
@model CustomerVM

@{
    ViewData["Title"] = "Create New Customer";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-plus-circle"></i> Create New Customer
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Customer Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <!-- Name -->
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label fw-bold"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <!-- Phone -->
                                <div class="form-group mb-3">
                                    <label asp-for="Phone" class="form-label fw-bold"></label>
                                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>

                                <!-- Email -->
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label fw-bold"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="col-md-6">
                                <!-- Country -->
                                <div class="form-group mb-3">
                                    <label asp-for="Country" class="form-label fw-bold"></label>
                                    <select asp-for="Country" class="form-select" asp-items="ViewBag.Countries">
                                        <option value="">-- Select Country --</option>
                                    </select>
                                    <span asp-validation-for="Country" class="text-danger small"></span>
                                </div>

                                <!-- City -->
                                <div class="form-group mb-3">
                                    <label asp-for="City" class="form-label fw-bold"></label>
                                    <input asp-for="City" class="form-control" placeholder="Enter city" />
                                    <span asp-validation-for="City" class="text-danger small"></span>
                                </div>

                                <!-- Postal Code -->
                                <div class="form-group mb-3">
                                    <label asp-for="PostalCode" class="form-label fw-bold"></label>
                                    <input asp-for="PostalCode" class="form-control" placeholder="Enter postal code" />
                                    <span asp-validation-for="PostalCode" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label fw-bold"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"
                                placeholder="Enter full address"></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Notes -->
                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="form-label fw-bold"></label>
                            <textarea asp-for="Notes" class="form-control" rows="3"
                                placeholder="Any additional notes..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <!-- Active Status -->
                        <div class="form-group mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger small"></span>
                        </div>

                        <!-- Form Buttons -->
                        <div class="form-group mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Customer
                            </button>
                            <button type="reset" class="btn btn-secondary">
                                <i class="fas fa-redo"></i> Reset
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tips Card -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header py-3 bg-info text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-lightbulb"></i> Customer Tips
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Complete information</strong> helps with order processing
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Accurate contact details</strong> ensure smooth communication
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Add notes</strong> for special requirements or preferences
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Deactivate instead of delete</strong> to keep order history
                        </li>
                    </ul>

                    <div class="alert alert-warning mt-3">
                        <h6><i class="fas fa-exclamation-triangle"></i> Important</h6>
                        <p class="mb-0">Customers with order history cannot be deleted. You can only deactivate them.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>