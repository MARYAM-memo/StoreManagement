@model ApplicationUser

@{
    ViewData["Title"] = "User Details";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-person-badge me-2"></i>User Details</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                {
                    <img src="@Model.ProfilePicture" alt="@Model.FullName" class="img-fluid rounded-circle mb-3"
                        style="max-width: 200px;">
                }
                else
                {
                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                        style="width: 200px; height: 200px;">
                        <i class="bi bi-person text-white" style="font-size: 5rem;"></i>
                    </div>
                }

                <h3>@Model.FullName</h3>
                <div class="mt-2">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                    @if (Model.ForcePasswordChange)
                    {
                        <span class="badge bg-warning ms-1">Password Reset Required</span>
                    }
                </div>
            </div>

            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Username</label>
                            <p>@Model.UserName</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <p>@Model.Email</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Phone Number</label>
                            <p>@Model.PhoneNumber</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Employee ID</label>
                            <p>@Model.EmployeeId</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Department</label>
                            <p>@Model.Department</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Position</label>
                            <p>@Model.Position</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Created At</label>
                            <p>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Last Login</label>
                            <p>@(Model.LastLoginDate?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Last Password Change</label>
                            <p>@(Model.LastPasswordChangeDate?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Hire Date</label>
                            <p>@(Model.HireDate?.ToString("yyyy-MM-dd") ?? "Not set")</p>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Roles</label>
                            <div>
                                @if (ViewBag.UserRoles != null)
                                {
                                    foreach (var role in ViewBag.UserRoles)
                                    {
                                        <span class="badge bg-info me-2 mb-2">
                                            @role.Name
                                            @if (!string.IsNullOrEmpty(role.Description))
                                            {
                                                <small title="@role.Description">ⓘ</small>
                                            }
                                        </span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Edit User
            </a>
            <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-key me-1"></i>Change Password
            </a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>