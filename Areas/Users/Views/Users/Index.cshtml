@model IEnumerable<UserVM>

@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Areas/Users/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3><i class="bi bi-people"></i> Users Management</h3>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New User
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white py-3">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="d-flex">
                    <div class="input-group">
                        <input type="text" class="form-control" name="searchTerm" value="@ViewData["CurrentFilter"]"
                            placeholder="Search users...">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="btn-group float-end" role="group">
                    <a asp-action="Index" asp-route-filter="all"
                        class="btn @(ViewData["CurrentFilterType"]?.ToString() == "all" || ViewData["CurrentFilterType"] == null ? "btn-light" : "btn-outline-light")">
                        All (@Model.Count())
                    </a>
                    <a asp-action="Index" asp-route-filter="active"
                        class="btn @(ViewData["CurrentFilterType"]?.ToString() == "active" ? "btn-light" : "btn-outline-light")">
                        Active (@Model.Count(u => u.IsActive))
                    </a>
                    <a asp-action="Index" asp-route-filter="inactive"
                        class="btn @(ViewData["CurrentFilterType"]?.ToString() == "inactive" ? "btn-light" : "btn-outline-light")">
                        Inactive (@Model.Count(u => !u.IsActive))
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(user.ProfilePicture))
                                    {
                                        <img src="@user.ProfilePicture" alt="@user.FullName" class="rounded-circle me-2"
                                            style="width: 40px; height: 40px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white rounded-circle me-2 d-flex align-items-center justify-content-center"
                                            style="width: 40px; height: 40px;">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    }
                                    <div>
                                        <strong>@user.FullName</strong>
                                        @if (!string.IsNullOrEmpty(user.EmployeeId))
                                        {
                                            <br>
                                    
                                            <small class="text-muted">@user.EmployeeId</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge bg-info me-1">@role</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                                @if (user.ForcePasswordChange)
                                {
                                    <span class="badge bg-warning ms-1">Password Reset Required</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info"
                                        title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary"
                                        title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    @if (user.IsActive)
                                    {
                                        <a asp-action="Deactivate" asp-route-id="@user.Id"
                                            class="btn btn-sm btn-outline-warning" title="Deactivate">
                                            <i class="bi bi-person-dash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <form asp-action="Activate" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Activate">
                                                <i class="bi bi-person-check"></i>
                                            </button>
                                        </form>
                                    }
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger"
                                        title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <h3 class="mt-3">No users found</h3>
                <p class="text-muted">Start by adding your first user.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New User
                </a>
            </div>
        }
    </div>

    <div class="card-footer">
        <small class="text-muted">
            Showing @Model.Count() users |
            <a asp-action="Create" class="text-decoration-none">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </small>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}