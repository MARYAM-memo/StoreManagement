@model ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<div class="card">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0"><i class="bi bi-arrow-clockwise me-2"></i>Reset Password</h4>
    </div>

    <div class="card-body">
        <div class="alert alert-warning">
            <h5><i class="bi bi-exclamation-triangle me-2"></i>Reset Password for @ViewBag.FullName</h5>
            <p class="mb-0">
                This will reset the user's password and force them to change it on their next login.
                Username: <strong>@Model.UserName</strong>
            </p>
        </div>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="UserName" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-arrow-clockwise me-1"></i>Reset Password
                </button>
                <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}