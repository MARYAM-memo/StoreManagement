@model ApplicationUser

@{
    ViewData["Title"] = "Deactivate User";
}

<div class="card border-warning">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0"><i class="bi bi-person-dash me-2"></i>Deactivate User</h4>
    </div>

    <div class="card-body">
        <div class="alert alert-warning">
            <h5 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Warning!</h5>
            <p class="mb-0">Are you sure you want to deactivate this user? They will not be able to log in until
                reactivated.</p>
        </div>

        <div class="row">
            <div class="col-md-8">
                <h5>User Information</h5>
                <dl class="row">
                    <dt class="col-sm-3">Full Name</dt>
                    <dd class="col-sm-9">@Model.FullName</dd>

                    <dt class="col-sm-3">Username</dt>
                    <dd class="col-sm-9">@Model.UserName</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Department</dt>
                    <dd class="col-sm-9">@Model.Department</dd>

                    <dt class="col-sm-3">Position</dt>
                    <dd class="col-sm-9">@Model.Position</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-success">Currently Active</span>
                    </dd>

                    <dt class="col-sm-3">Last Login</dt>
                    <dd class="col-sm-9">@(Model.LastLoginDate?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Deactivate" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mt-4">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-person-dash me-1"></i>Confirm Deactivate
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>