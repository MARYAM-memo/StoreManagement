@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 text-center"><i class="fas fa-ban me-2"></i>Access Denied</h4>
                </div>
                <div class="card-body text-center py-5">
                    <div class="display-1 text-danger mb-4">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3>You don't have permission to access this resource</h3>
                    <p class="lead text-muted mb-4">
                        The page you are trying to access requires special permissions that you don't have.
                    </p>
                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-primary me-2">
                            <i class="fas fa-home me-2"></i>Go to Homepage
                        </a>
                        <a asp-action="Login" asp-controller="Account" asp-area="Users"
                            class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-2"></i>Login with different account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>