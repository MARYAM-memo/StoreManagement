@model ApplicationRole

@{
    ViewData["Title"] = "Delete Role";
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Delete Role</h4>
    </div>

    <div class="card-body">
        <div class="alert alert-danger">
            <h5 class="alert-heading"><i class="bi bi-exclamation-octagon-fill me-2"></i>Warning!</h5>
            <p class="mb-0">Are you sure you want to delete this role? This action cannot be undone.</p>
        </div>

        <div class="row">
            <div class="col-md-8">
                <h5>Role Information</h5>
                <dl class="row">
                    <dt class="col-sm-3">Role Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <span class="text-muted">No description</span>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </dd>

                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsSystemRole)
                        {
                            <span class="badge bg-warning">System Role</span>
                        }
                        else
                        {
                            <span class="badge bg-info">Custom Role</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Users Assigned</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary">@ViewBag.UserCount user(s)</span>
                    </dd>

                    <dt class="col-sm-3">Created By</dt>
                    <dd class="col-sm-9">@Model.CreatedBy</dd>

                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>

                @if (ViewBag.UserCount > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        This role has @ViewBag.UserCount user(s) assigned. Deleting it will remove all permissions from
                        these users.
                    </div>
                }
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>