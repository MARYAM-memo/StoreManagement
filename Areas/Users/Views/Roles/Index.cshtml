@model IEnumerable<RoleVM>

@{
    ViewData["Title"] = "Roles Management";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-shield-lock me-2"></i>Roles Management</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-1"></i>Add New Role
            </a>
        </div>
    </div>

    <div class="card-body">
        <!-- Search -->
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-12">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchTerm" value="@ViewData["CurrentFilter"]"
                        placeholder="Search roles...">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>

        <!-- Roles Grid -->
        <div class="row">
            @foreach (var role in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border @(role.IsSystemRole ? "border-warning" : "")">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    @if (role.IsSystemRole)
                                    {
                                        <i class="bi bi-shield-fill-check text-warning me-1"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-shield me-1"></i>
                                    }
                                    @role.Name
                                </h5>
                                <span class="badge @(role.IsSystemRole ? "bg-warning" : "bg-info")">
                                    @role.UserCount user(s)
                                </span>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text">
                                @if (string.IsNullOrEmpty(role.Description))
                                {
                                    <span class="text-muted">No description</span>
                                }
                                else
                                {
                                    @role.Description
                                }
                            </p>

                            <div class="small text-muted mb-3">
                                <i class="bi bi-calendar me-1"></i>Created: @role.CreatedAt.ToString("yyyy-MM-dd")
                            </div>

                            <!-- Permissions Preview -->
                            @if (role.CanManageUsers || role.CanManageRoles || role.CanManageProducts ||
                                                    role.CanManageCategories ||
                                                    role.CanManageBrands || role.CanManageCustomers || role.CanManageOrders ||
                                                    role.CanManageSuppliers ||
                                                    role.CanManageInventory || role.CanViewReports || role.CanManageSettings)
                            {
                                <h6 class="mt-3 mb-2">Permissions:</h6>
                                <div class="d-flex flex-wrap gap-1">
                                    @if (role.CanManageUsers)
                                    {
                                        <span class="badge bg-success">Users</span>
                                    }
                                    @if (role.CanManageRoles)
                                    {
                                        <span class="badge bg-success">Roles</span>
                                    }
                                    @if (role.CanManageProducts)
                                    {
                                        <span class="badge bg-primary">Products</span>
                                    }
                                    @if (role.CanManageCategories)
                                    {
                                        <span class="badge bg-primary">Categories</span>
                                    }
                                    @if (role.CanManageBrands)
                                    {
                                        <span class="badge bg-primary">Brands</span>
                                    }
                                    @if (role.CanManageCustomers)
                                    {
                                        <span class="badge bg-info">Customers</span>
                                    }
                                    @if (role.CanManageOrders)
                                    {
                                        <span class="badge bg-info">Orders</span>
                                    }
                                    @if (role.CanManageSuppliers)
                                    {
                                        <span class="badge bg-info">Suppliers</span>
                                    }
                                    @if (role.CanManageInventory)
                                    {
                                        <span class="badge bg-warning">Inventory</span>
                                    }
                                    @if (role.CanViewReports)
                                    {
                                        <span class="badge bg-secondary">Reports</span>
                                    }
                                    @if (role.CanManageSettings)
                                    {
                                        <span class="badge bg-dark">Settings</span>
                                    }
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (!role.IsSystemRole)
                                {
                                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="ManageUsers" asp-route-id="@role.Id" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-people"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-shield-lock display-1 text-muted"></i>
                <h4 class="mt-3">No roles found</h4>
                <p class="text-muted">Create your first role to get started.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Add New Role
                </a>
            </div>
        }
    </div>
</div>