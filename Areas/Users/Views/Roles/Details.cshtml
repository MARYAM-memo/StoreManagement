
@model ApplicationRole

@{
    ViewData["Title"] = "Role Details";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-shield-check me-2"></i>Role Details</h4>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h3>
                    @if (Model.IsSystemRole)
                    {
                        <i class="bi bi-shield-fill-check text-warning me-2"></i>
                    }
                    else
                    {
                        <i class="bi bi-shield me-2"></i>
                    }
                    @Model.Name
                </h3>

                <div class="mb-4">
                    <span class="badge @(Model.IsSystemRole ? "bg-warning" : "bg-info")">
                        @(Model.IsSystemRole ? "System Role" : "Custom Role")
                    </span>
                </div>

                <div class="mb-4">
                    <h5>Description</h5>
                    <p class="lead">
                        @if (string.IsNullOrEmpty(Model.Description))
                        {
                            <span class="text-muted">No description provided</span>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Created By</label>
                            <p>@Model.CreatedBy</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Created At</label>
                            <p>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                    </div>
                </div>

                <!-- Permissions -->
                <div class="border rounded p-4 mb-4">
                    <h5 class="mb-3"><i class="bi bi-key me-2"></i>Permissions</h5>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">User Management</label>
                                <p>
                                    @if (Model.CanManageUsers)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Role Management</label>
                                <p>
                                    @if (Model.CanManageRoles)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Product Management</label>
                                <p>
                                    @if (Model.CanManageProducts)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Category Management</label>
                                <p>
                                    @if (Model.CanManageCategories)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Brand Management</label>
                                <p>
                                    @if (Model.CanManageBrands)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Customer Management</label>
                                <p>
                                    @if (Model.CanManageCustomers)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Order Management</label>
                                <p>
                                    @if (Model.CanManageOrders)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Supplier Management</label>
                                <p>
                                    @if (Model.CanManageSuppliers)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Inventory Management</label>
                                <p>
                                    @if (Model.CanManageInventory)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">View Reports</label>
                                <p>
                                    @if (Model.CanViewReports)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Manage Settings</label>
                                <p>
                                    @if (Model.CanManageSettings)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Disabled</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-people me-2"></i>Users with this Role</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.UsersInRole != null && ((List<ApplicationUser>)ViewBag.UsersInRole).Count > 0)
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var user in (List<ApplicationUser>)ViewBag.UsersInRole)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@user.FullName</strong>
                                                <div class="small text-muted">@user.UserName</div>
                                            </div>
                                            <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                                                @(user.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted text-center">No users assigned to this role</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            @if (!Model.IsSystemRole)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-1"></i>Edit Role
                </a>
                <a asp-action="ManageUsers" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="bi bi-people me-1"></i>Manage Users
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>